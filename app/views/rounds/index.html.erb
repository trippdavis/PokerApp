<h1>Overall Results</h1>
<h3>Player 1: <%= @player1_wins %> wins</h3>
<h3>Player 2: <%= @player2_wins %> wins</h3>

<hr>

<form action="rounds" method="get">
  <label>
  <h3>Enter a valid round number (1-1000) to see its results</h3>
  <% if flash[:errors] %>
    <%= flash[:errors] %>
    <br>
  <% end %>
  <input type="text" name="round_id">
  </label>

  <button type="submit">See Results</button>
</form>
